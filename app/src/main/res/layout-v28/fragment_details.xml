<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailsFragment">

    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/detailsImageSlider"
        android:layout_width="match_parent"
        android:layout_height="200.dp"
        app:iss_auto_cycle="true"
        app:iss_delay="0"
        app:iss_error_image="@color/off_white"
        app:iss_period="1000"
        app:iss_placeholder="@color/off_white"
        app:iss_selected_dot="@drawable/default_selected_dot"
        app:iss_unselected_dot="@drawable/default_unselected_dot"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="22.sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailsImageSlider" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/detailsImageSlider" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:lineHeight="22dp"
        android:text="To implement an image slider in an Android app using Kotlin, you can use various third-party libraries that simplify the process. One of the most popular libraries for this purpose is ViewPager2 combined with a slider library like Glide or Picasso for image loading.

Here, I'll show you the steps and dependencies for adding a simple image slider to your Android app using Kotlin with ViewPager2 and Glide for image loading."
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="15.dp"
        app:layout_constraintHorizontal_bias="0.155"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

</androidx.constraintlayout.widget.ConstraintLayout>